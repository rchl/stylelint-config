{
  "name": "stylelint-config-rchl",
  "version": "0.0.1",
  "main": "index.js",
  "files": [
    "CHANGELOG.md",
    "index.js",
    "README.md"
  ],
  "scripts": {
    "test": "npm run lint && jest",
    "lint": "eslint .",
    "version": "git add .",
    "postversion": "git push --follow-tags"
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-rchl-base"
    ]
  },
  "stylelint": {
    "extends": [
      "./index.js"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  },
  "peerDependencies": {
    "stylelint": "^14.11.0"
  },
  "dependencies": {
    "postcss-html": "^1.5.0",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^28.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.38.0",
    "eslint-config-rchl-base": "^1.0.0",
    "husky": "^4.3.8",
    "jest": "^29.5.0",
    "stylelint": "^14.16.1"
  }
}
